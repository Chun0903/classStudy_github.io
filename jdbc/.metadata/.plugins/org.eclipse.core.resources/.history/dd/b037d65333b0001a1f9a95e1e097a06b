	static void page3(List<String> arrayList) {
		// 1. ��ü ���� ���� ���� Ȯ��
        
        //10���� ����
       List<String[]> depart = new ArrayList<String[]>();
       int firstindex = 0;
       int lastindex = 10;
       int index = 0;
       int totalcount = arrayList.size();

       while (true) {
          // 10���� String �� �� ����
          String[] ranking = new String[10];

          for (int j = firstindex; j < lastindex; j++) {
             if (j >= arrayList.size()) {
                break;
             }
             ranking[j - (index) * 10] = arrayList.get(j);
             }
          depart.add(ranking);
          
          firstindex = firstindex + 10;
          lastindex = lastindex + 10;
          index++;

          if (firstindex >= totalcount) {
             break;
          }
       
       }
       
       
       
       //������ �� 
       int count = 0;
       
       int num = 1;
       
       //�������� �Ѱ��� �ִ� ���
       if(depart.size() == 1) {
          //ù������ �����ֱ�
          for(int i = 0; i < depart.get(0).length; i++) {
             if( depart.get(0)[i] != null) {
             System.out.printf("\t\t\t%d. %s\n",i+1,depart.get(0)[i]);
             }
          }
           System.out.println("\t\t\t��������������������������");
          System.out.println("\t\t\t"+"�Ѿ �������� �����ϴ�.");
           System.out.println("\t\t\t��������������������������");
       }
       else {
       
       //�������� �������� ���
       while(true) {
          

           System.out.println();
          for(int i = 0; i < 10; i++) {
             System.out.printf("\t\t\t%d. ", num);
             if( depart.get(count)[i] != null) {
                System.out.printf("\t%s\t" , depart.get(count)[i]);
             }
             System.out.println();
             num++;
          }
          //������ �ݺ�
          System.out.println();
          System.out.println();
           System.out.println("\t\t\t��������������������������");
          System.out.printf("\t\t\t"+"%d������ �Դϴ�.\n", count + 1);
           System.out.println("\t\t\t��������������������������");
          System.out.println("\t\t\t"+"1. ���� ������");
          System.out.println("\t\t\t"+"2. ���� ������");
          System.out.println();
          System.out.println("\t\t\t"+"a. �ڷΰ���");
          System.out.println("\t\t\t"+"b. ó�����ΰ���");
           System.out.println("\t\t\t��������������������������");   
          //��ȣ ����
          Scanner scan = new Scanner(System.in);
          System.out.print("\t\t\t"+"�Է�:  ");
          String answer = scan.nextLine();
          //scan.skip("\r\n"); //���� ����
           System.out.println("\t\t\t��������������������������");
          //����������
          if(answer.equals("1")) {
             //ù������ �� ���
             if(count == 0) {
                count = depart.size() - 1 ;
                num = depart.size() * 10 -9;
             } else {
                count = count-1;
                num -= 20;
             }
          } else if(answer.equals("2")){
             //����������
        	  
        	 
             
             //������ �������� ���
             if(count == depart.size() -1 ) {
                count = 0;
                num = 1;
             } else {
                count = count+1;
                
             }
          } else if(answer.equals("a")) {
             
             //�ڷΰ���
        	  ClassOfAdminMain();
             
          } else if(answer.equals("b")) {
     
             //ó������ ����
        	   //Menu home = new Menu();
        	   //Menu.home();
   
          } 
             
          
          else {
             //System.out.println("\t\t\t"+"������ ���α׷��� �����մϴ�.");
             
             
             break;
          }      }
       
       
       
       
    } //while

    }
    
    
