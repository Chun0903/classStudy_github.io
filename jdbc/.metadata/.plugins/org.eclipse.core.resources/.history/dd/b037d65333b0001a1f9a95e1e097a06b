	      CallableStatement stat = null;
	      ResultSet rs = null;
	      DBUtil util = new DBUtil();      
	      
	      bseq.clear();
	      
	      try {
	         //����Ʈ ����
	         
	         //���ν��� �θ���
	         String sql = "{ call  ProBook(?) }";

	         //open
	         conn = util.open();
	         stat = conn.prepareCall(sql);
	         
	         //Ŀ���θ���
	         stat.registerOutParameter(1, OracleTypes.CURSOR);
	         
	         //��¿�û
	         stat.executeQuery();
	         
	         //��°� ���
	         rs = (ResultSet)stat.getObject(1);
	         
	         System.out.println();
	         System.out.println("\t\t\t������������������������������������������������");
