	         while (rs.next()) {
	            System.out.println("\t\t\t--------------------------------------------------------------");
	            System.out.printf("\t\t\t%s\t%s\t%s\n"
	                  ,rs.getString("seq")
	                  ,rs.getString("publisher")
	            	  ,rs.getString("name"));
