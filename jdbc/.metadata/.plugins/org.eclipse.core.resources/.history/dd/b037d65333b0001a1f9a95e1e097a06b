	private static void CompletionDate() {
		// Ư�� ���� ���� ���ᳯ¥ �Է� ������
		
		Connection conn = null;
		Statement stat = null;
		ResultSet rs = null;
		DBUtil util = new DBUtil();
		CallableStatement stat2 = null;
		

		try {

			System.out.print("\t\t\t������ ��ȣ : ");
			String studentSeq = scan.nextLine();
			
			System.out.print("\t\t\t���ᳯ¥(YY/MM/DD): ");
			String CompletionInput = scan.nextLine();

			conn = util.open();
			
			String sql = "{call procDate(?,?,?)}";
			
			stat2 = conn.prepareCall(sql);
			
			stat2.setString(1, studentSeq);
			stat2.setString(2, SubjectNameInput);
			stat2.setString(3, CompletionInput);
	
			stat2.executeUpdate();

			System.out.println("\t\t\t���ᳯ¥ �Է� �Ϸ�Ǿ����ϴ�.");
			System.out.println("\t\t\t��������������������������");
			System.out.println("\t\t\ta. �ڷΰ���");
			System.out.println("\t\t\tb. ó������ ����");
			System.out.println("\t\t\t��������������������������");
			System.out.print("\t\t\t��ȣ�� �Է����ּ��� : ");
			String UserInput2 = scan.nextLine();

			if (UserInput2.equals("a")) {
				// �ڷΰ��� -> ��ü ���� ���� ���� ������
				CheckInfo();

			} else if (UserInput2.equals("b")) {
				// ó������ ����
				// Menu home = new Menu();
			   // Menu.home();

			} else {
				System.out.println("�߸��� �Է��Դϴ�. �ٽ��Է��ϼ���.");
			}

		} catch (Exception e) {
			//System.out.println("CompletionDate()���� ���� �߻�");
			e.printStackTrace();
			
		} finally {
			try {
				stat2.close();
				conn.close();
			} catch (Exception e) {
			}
		}

	}
